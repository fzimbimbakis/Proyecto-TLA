Class Rectangulo{
    Attributes {
            int ladoA;
            int ladoB;
        }

        Constructor Rectangulo(int ladoA, int ladoB){
          this.ladoA = ladoA;
          this.ladoB = ladoB;
        }


    int area () {
           return this.ladoA * this.ladoB;
        }
    int perimetro(){
           return this.ladoA * 2 + this.ladoB * 2;
        }
}
Class Cuadrado extends Rectangulo{

            Constructor Cuadrado(int lado){
              this.ladoA=lado;
              this.ladoB=lado;
            }
            int modificar(int lado){
                this.ladoA = lado;
                this.ladoB = lado;
            }
}
int main(){
    Cuadrado c = new Cuadrado(3);
    int p = c.perimetro();
    printf("%d\n",p);
    int a = c.area();
    printf("%d\n",a);
    c.modificar(2);
    int pmod = c.perimetro();
    printf("%d\n",pmod);
    int amod = c.area();
    printf("%d\n",amod);

}